{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["dom", "esnext", "es2017.object"],
    "jsx": "react",
    "declaration": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true
